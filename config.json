{
  "name": "Full Menu",
  "identifier": "fullmenu",
  "description": "",
  "descriptionShort": "",
  "documentation": "",
  "type": "A",
  "icon": "menu",
  "version": "1.0",
  "author": "King of App",
  "showOn": {
    "menu": false,
    "market": true,
    "dragDrop": true
  },
  "requires": [],
  "canContain": true,
  "view": "modules/koa-module-fullmenu/index.html",
  "files": ["modules/koa-module-fullmenu/controller.js"],
  "libs": [
    {
      "bower": {
        "PolymerElements/iron-flex-layout": "^1.3.0"
      },
      "src": "bower_components/iron-flex-layout/iron-flex-layout.html"
    },
    {
      "bower": "",
      "src":"modules/koa-module-fullmenu/styles.html"
    }
  ],
  "scope": {
    "sections": [
      "",
      ""
    ],
    "backgroundImages": [
      "",
      ""
    ],
    "backgroundColors": [
      "",
      ""
    ],
    "headerShown": true,
    "headerBackgroundImage": "",
    "headerBackgroundColor": "",
    "headerReverse": false,
    "headerTitle": "",
    "headerLogo": "",
    "headerAlignment": "left",
    "showicons": true,
    "title": true,
    "logo": ""
  },
  "config": [
    {
      "key": "sections",
      "type": "multiInput",
      "templateOptions": {
        "label": "Sections",
        "inputOptions": {
          "type": "select",
          "templateOptions": {
            "options": [],
            "label": "Normal Select"
          }
        }
      }
    },
    {
      "key": "backgroundImages",
      "type": "multiInput",
      "templateOptions": {
        "inputOptions": {
          "type": "input"
        },
        "label": "Background image URLs",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "backgroundColors",
      "type": "multiInput",
      "templateOptions": {
        "inputOptions": {
          "type": "input"
        },
        "label": "Background colors"
      }
    },
    {
      "key": "headerShown",
      "type": "checkbox",
      "templateOptions": {
        "label": "Header",
        "description": "Show header"
      }
    },
    {
      "key": "headerBackgroundImage",
      "type": "input",
      "templateOptions": {
        "label": "Header image",
        "description": "The URL of the header background image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "headerBackgroundColor",
      "type": "input",
      "templateOptions": {
        "label": "Header color",
        "description": "The header background color"
      }
    },
    {
      "key": "headerReverse",
      "type": "checkbox",
      "templateOptions": {
        "label": "Header reverse",
        "description": "Reverse order of logo and title"
      }
    },
    {
      "key": "headerTitle",
      "type": "input",
      "templateOptions": {
        "label": "Header title",
        "description": "The header title"
      }
    },
    {
      "key": "headerLogo",
      "type": "input",
      "templateOptions": {
        "label": "Header logo",
        "description": "The URL of the header logo image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "headerAlignment",
      "type": "select",
      "templateOptions": {
        "label": "Header alignment",
        "options": [
          {"name": "left", "value": "left"},
          {"name": "center", "value": "center"},
          {"name": "right", "value": "right"}
        ]
      }
    },
    {
      "key": "showicons",
      "type": "checkbox",
      "templateOptions": {
        "description": "Show menu icons",
        "label": "Menu icons"
      }
    },
    {
      "key": "title",
      "type": "checkbox",
      "templateOptions": {
        "label": "Toolbar title",
        "description": "Show the toolbar title"
      }
    },
    {
      "key": "logo",
      "type": "input",
      "templateOptions": {
        "label": "Toolbar logo",
        "description": "The URL of the toolbar logo image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    }
  ]
}
